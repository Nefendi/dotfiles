[color]
	ui = auto
[core]
	pager = less
	autocrlf = input
	editor = nvim
[diff]
	tool = meld
	algorithm = histogram
[difftool]
	prompt = false
[merge]
	tool = meld
	conflictstyle = diff3
[rerere]
	enabled = true
[pager]
	branch = false
