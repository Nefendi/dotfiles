[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	sw = switch

[push]
	default = upstream

[user]
	name = Nefendi
	email = 28621696+Nefendi@users.noreply.github.com

[color]
	ui = always

[core]
	pager = less
	autocrlf = input
	editor = nvim
	excludesfile = ~/.global_gitignore

[diff]
	tool = meld
	algorithm = histogram
	colorMoved = zebra

[difftool]
	prompt = false

[merge]
	tool = meld
	conflictstyle = diff3

[rerere]
	enabled = true

[pager]
	branch = false

[pull]
	rebase = true

[log]
	decorate = full

[fetch]
	prune = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
